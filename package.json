{
  "name": "bun-git-hooks",
  "type": "module",
  "version": "0.1.0",
  "description": "A modern, zero dependency tool for managing git hooks in Bun projects.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/bun-git-hooks#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/bun-git-hooks.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/bun-git-hooks/issues"
  },
  "keywords": [
    "bun-git-hooks",
    "pre-commit",
    "pre-push",
    "git",
    "hook",
    "hooks",
    "bun",
    "simple-git-hooks",
    "typescript",
    "cli",
    "library"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "git-hooks": "./dist/bin/cli.js",
    "bun-git-hooks": "./dist/bin/cli.js"
  },
  "files": ["README.md", "dist"],
  "scripts": {
    "build": "bun build.ts && bun run compile",
    "compile": "bun build ./bin/cli.ts --compile --minify --outfile bin/git-hooks",
    "compile:all": "bun run compile:linux-x64 && bun run compile:linux-arm64 && bun run compile:windows-x64 && bun run compile:darwin-x64 && bun run compile:darwin-arm64",
    "compile:linux-x64": "bun build ./bin/cli.ts --compile --minify --target=bun-linux-x64 --outfile bin/git-hooks-linux-x64.zip",
    "compile:linux-arm64": "bun build ./bin/cli.ts --compile --minify --target=bun-linux-arm64 --outfile bin/git-hooks-linux-arm64.zip",
    "compile:windows-x64": "bun build ./bin/cli.ts --compile --minify --target=bun-windows-x64 --outfile bin/git-hooks-windows-x64.zip",
    "compile:darwin-x64": "bun build ./bin/cli.ts --compile --minify --target=bun-darwin-x64 --outfile bin/git-hooks-darwin-x64.zip",
    "compile:darwin-arm64": "bun build ./bin/cli.ts --compile --minify --target=bun-darwin-arm64 --outfile bin/git-hooks-darwin-arm64.zip",
    "postinstall": "bun ./scripts/postinstall.ts",
    "uninstall": "bun ./scripts/uninstall.ts",
    "lint": "bunx --bun eslint .",
    "lint:fix": "bunx --bun eslint . --fix",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "changelog": "bunx changelogen --output CHANGELOG.md",
    "prepublishOnly": "bun --bun run build && bun run compile:all",
    "release": "bun run changelog && bunx bumpp package.json --all",
    "test": "bun test",
    "dev:docs": "bun --bun vitepress dev docs",
    "build:docs": "bun --bun vitepress build docs",
    "preview:docs": "bun --bun vitepress preview docs",
    "typecheck": "bun --bun tsc --noEmit",
    "zip": "bun run zip:all",
    "zip:all": "bun run zip:linux-x64 && bun run zip:linux-arm64 && bun run zip:windows-x64 && bun run zip:darwin-x64 && bun run zip:darwin-arm64",
    "zip:linux-x64": "zip -j bin/git-hooks-linux-x64.zip bin/git-hooks-linux-x64",
    "zip:linux-arm64": "zip -j bin/git-hooks-linux-arm64.zip bin/git-hooks-linux-arm64",
    "zip:windows-x64": "zip -j bin/git-hooks-windows-x64.zip bin/git-hooks-windows-x64.exe",
    "zip:darwin-x64": "zip -j bin/git-hooks-darwin-x64.zip bin/git-hooks-darwin-x64",
    "zip:darwin-arm64": "zip -j bin/git-hooks-darwin-arm64.zip bin/git-hooks-darwin-arm64"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.2.8",
    "@shikijs/vitepress-twoslash": "^3.2.1",
    "@stacksjs/eslint-config": "^4.10.2-beta.3",
    "@types/bun": "^1.2.8",
    "@types/node": "^22.13.14",
    "@vite-pwa/vitepress": "^1.0.0",
    "bumpp": "^10.1.0",
    "bun-plugin-dtsx": "^0.21.9",
    "bunfig": "^0.8.2",
    "cac": "^6.7.14",
    "changelogen": "^0.6.1",
    "lint-staged": "^15.5.0",
    "typescript": "^5.8.3",
    "unocss": "^66.0.0",
    "unplugin-icons": "^22.1.0",
    "unplugin-vue-components": "^28.4.1",
    "vite-plugin-pwa": "^1.0.0",
    "vitepress": "^1.6.3"
  },
  "overrides": {
    "unconfig": "0.3.10"
  },
  "lint-staged": {
    "*.{js,ts}": "bunx --bun eslint . --fix"
  }
}
